
@model UI_DATN_QS.Models.DB_Models.MatKhau_Model

<div class="container">
    <div class="col-md-12">
        <br />
        <br />
        <h3 class="text-center" id="exampleModalLongTitle">THAY ĐỔI MẬT KHẨU</h3>
        <br />
        @using (Html.BeginForm("CHANGE_MatKhau", "DangXuatGV", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group row">
                <label for="inputPassword" class="col-sm-4 col-md-2 col-form-label">Mật khẩu hiện tại  <span class="text-danger">(*)</span></label>
                <div class="col-sm-8 col-md-10">
                    @Html.TextBoxFor(mo => mo.OLD_Password, new { @class = "form-control", @required = "required", @type = "password" })
                    @*@Html.ValidationMessageFor(mo => mo.MA_KhoaHoc, null, new { @class = "text-danger" })*@
                </div>
            </div>
            <br />
            <div class="form-group row">
                <label for="inputPassword" class="col-sm-4 col-md-2 col-form-label">Mật khẩu mới  <span class="text-danger">(*)</span></label>
                <div class="col-sm-8 col-md-10">
                    @Html.TextBoxFor(mo => mo.NEW_Password, new { @id = "txtPassword", @class = "form-control", @required = "required", @type = "password" })
                    @*@Html.ValidationMessageFor(mo => mo.TEN_KhoaHoc, null, new { @class = "text-danger" })*@
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword" class="col-sm-4 col-md-2 col-form-label">Xác nhận mật khẩu  <span class="text-danger">(*)</span></label>
                <div class="col-sm-8 col-md-10">
                    @Html.TextBoxFor(mo => mo.NEW_Password, new { @id = "txtConfirmPassword", @class = "form-control", @required = "required", @type = "password" })
                    @*@Html.ValidationMessageFor(mo => mo.TEN_KhoaHoc, null, new { @class = "text-danger" })*@
                </div>
            </div><div class="form-group row">
                <label for="inputPassword" class="col-sm-4 col-md-2 col-form-label"></label>
                <div class="col-sm-8 col-md-10">
                    @if (ViewBag.Notifi != null)
                    {
                    <span class="text-danger">Mật khẩu hiện tại không đúng</span>
                    }
                </div>
            </div>

            <div class="form-group row">
                <label for="inputPassword" class="col-sm-4 col-md-2 col-form-label"></label>
                <div class="col-sm-8 col-md-10">
                    <button class="btn btn-success">
                        <i class="fas fa-download"></i> Lưu
                    </button>
                </div>
            </div>

        }
    </div>
</div>

@section JSFooter{
    <script type="text/javascript">
        window.onload = function () {
            var txtPassword = document.getElementById("txtPassword");
            var txtConfirmPassword = document.getElementById("txtConfirmPassword");
            txtPassword.onchange = ConfirmPassword;
            txtConfirmPassword.onkeyup = ConfirmPassword;
            function ConfirmPassword() {
                txtConfirmPassword.setCustomValidity("");
                if (txtPassword.value != txtConfirmPassword.value) {
                    txtConfirmPassword.setCustomValidity("Mật khẩu xác nhận chưa chính xác.");
                }
            }
        }
    </script>
}