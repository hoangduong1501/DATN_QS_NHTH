
@model UI_DATN_QS.Models.DB_Entities.MON_HOC

<div class="container">
    <div class="col-md-12">
        <br />
        <br />
        <h3 class="text-center" id="exampleModalLongTitle">TẠO MÔN HỌC</h3>
        <br />
        @using (Html.BeginForm("UPDATE_MonHoc", "KyThi", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("ID_MonHoc", Model.ID_MonHoc)

            <div class="form-group row">
                <label for="inputPassword" class="col-sm-4 col-md-2 col-form-label">Mã môn học <span class="text-danger">(*)</span></label>
                <div class="col-sm-8 col-md-10">
                    @Html.TextBoxFor(mo => mo.MA_MonHoc, new { @class = "form-control", @required = "required" })
                    @*@Html.ValidationMessageFor(mo => mo.MA_MonHoc, null, new { @class = "text-danger" })*@
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword" class="col-sm-4 col-md-2 col-form-label">Tên môn học <span class="text-danger">(*)</span></label>
                <div class="col-sm-8 col-md-10">
                    @Html.TextBoxFor(mo => mo.TEN_MonHoc, new { @class = "form-control", @required = "required" })
                    @*@Html.ValidationMessageFor(mo => mo.TEN_MonHoc, null, new { @class = "text-danger" })*@
                </div>
            </div>

            <div class="form-group row">
                <label for="inputPassword" class="col-sm-4 col-md-2 col-form-label">Ghi chú</label>
                <div class="col-sm-8 col-md-10">
                    @Html.TextAreaFor(mo => mo.NOTE_MonHoc, new { @class = "form-control", @rows = "2" })
                    @*@Html.ValidationMessageFor(mo => mo.NOTE_MonHoc, null, new { @class = "text-danger" })*@
                </div>
            </div>

            <div class="form-group row">
                <label for="inputPassword" class="col-sm-4 col-md-2 col-form-label"></label>
                <div class="col-sm-8 col-md-10">
                    <button class="btn btn-success">
                        <i class="fas fa-download"></i> Lưu
                    </button>
                </div>
            </div>

        }
    </div>
</div>