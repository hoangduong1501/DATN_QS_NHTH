
@model UI_DATN_QS.Models.DB_Models.NguoiDung_Model

<div class="container">
    <div class="col-md-12">
        <br />
        <br />
        <h3 class="text-center" id="exampleModalLongTitle">TẠO HỒ SƠ NGƯỜI DÙNG</h3>
        <br />
        @using (Html.BeginForm("INSERT_NguoiDung", "NguoiDung", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group row">
                <div class="col-md-8">
                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-4 col-md-3 col-form-label">Mã người dùng</label>
                        <div class="col-sm-5 col-md-8 col-md-8">
                            @Html.TextBoxFor(mo => mo.MA_NguoiDung, new { @class = "form-control" })
                            @Html.ValidationMessageFor(mo => mo.MA_NguoiDung, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-4 col-md-3 col-form-label">Tên người dùng</label>
                        <div class="col-sm-5 col-md-8">
                            @Html.TextBoxFor(mo => mo.TEN_NguoiDung, new { @class = "form-control" })
                            @Html.ValidationMessageFor(mo => mo.TEN_NguoiDung, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-4 col-md-3 col-form-label">Ngày sinh</label>
                        <div class="col-sm-5 col-md-8">
                            @Html.TextBoxFor(mo => mo.NSINH_NguoiDung, new { @class = "form-control", @type = "date" })
                            @Html.ValidationMessageFor(mo => mo.NSINH_NguoiDung, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-4 col-md-3 col-form-label">Email</label>
                        <div class="col-sm-5 col-md-8">
                            @Html.TextBoxFor(mo => mo.MAIL_NguoiDung, new { @class = "form-control" })
                            @Html.ValidationMessageFor(mo => mo.MAIL_NguoiDung, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-4 col-md-3 col-form-label">Tên đăng nhập</label>
                        <div class="col-sm-5 col-md-8">
                            @Html.TextBoxFor(mo => mo.USER_TaiKhoan, new { @class = "form-control" })
                            @Html.ValidationMessageFor(mo => mo.USER_TaiKhoan, null, new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <img id="imgUpload" class="img-thumbnail" src="~/Images/avatar-none.jpg" style="height: 12rem;" />
                    @Html.TextBox("fileLoad", "", new { @type = "file", @accept = "image/png, image/jpeg" })
                </div>

            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-md-2 col-form-label"></label>
                <div class="col-sm-8 col-md-10">
                    <button class="btn btn-success">
                        <i class="fas fa-download"></i> Lưu
                    </button>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-md-2 col-form-label"></label>
                <p class="text-danger">Mật khẩu mặc định là: 123456789</p>
            </div>
        }
    </div>
</div>

@section JSFooter{
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imgUpload').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>

}